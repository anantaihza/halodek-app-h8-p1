<!DOCTYPE html>
<html lang="en" data-theme="light">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/daisyui@4.12.10/dist/full.min.css" rel="stylesheet" type="text/css" />
  <script src="https://cdn.tailwindcss.com"></script>
  <title>User</title>
</head>
<body>
  <div class="navbar bg-base-100 container mx-auto px-36">
    <div class="flex-1">
      <a href="/user" class="btn btn-ghost text-xl">Halodek</a>
    </div>
    <div class="flex-none">
      <div class="dropdown dropdown-end">
        <h4><%= user.username %></h4>
      </div>
      <div class="dropdown dropdown-end">
        <div tabindex="0" role="button" class="btn btn-ghost btn-circle avatar">
          <div class="w-10 rounded-full">
            <img
              alt="Tailwind CSS Navbar component"
              src="https://static.vecteezy.com/system/resources/thumbnails/005/545/335/small/user-sign-icon-person-symbol-human-avatar-isolated-on-white-backogrund-vector.jpg" />
          </div>
        </div>
        <ul
          tabindex="0"
          class="menu menu-sm dropdown-content bg-base-100 rounded-box z-[1] mt-3 w-52 p-2 shadow">
          <li>
            <a href="/user/profile" class="justify-between">
              Profile
              <span class="badge">New</span>
            </a>
          </li>
          <li><a href="/logout">Logout</a></li>
        </ul>
      </div>
    </div>
  </div>

  <div class="container mx-auto px-36">
    <h1 class="font-black text-4xl mt-20"><%= disease.name %></h1>
    <p class="font-bold mb-10">Record Tanggal: <%= formatDate(record.createdAt) %></p>
    
    <div class="card bg-blue-500 w-full shadow-xl">
      <div class="card-body text-white">
        <h2 class="card-title">Description:</h2>
        <p><%= disease.description %></p>
      </div>
    </div>

    <h2 class="font-bold text-xl mt-20">List Obat yang dapat dibeli</h2>
    <div class="overflow-x-auto ">
      <table class="table">
        <!-- head -->
        <thead>
          <tr>
            <th>No</th>
            <th>Name</th>
            <th>Category</th>
            <th>Price</th>
          </tr>
        </thead>
        <tbody>
          <!-- row 1 -->
           <% disease.Drugs.forEach((el, i) => { %>
            <tr>
              <th><%= i + 1 %></th>
              <td><%= el.name %></td>
              <td><%= el.category %></td>
              <td><%= el.formatCurrency %></td>
            </tr>
            
           <% }) %>
          
        </tbody>
      </table>
    </div>
    
    
  </div>
</body>
</html>